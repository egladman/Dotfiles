!-------------------------------------------------------------------------------
! Font
!-------------------------------------------------------------------------------

URxvt*font: xft:Source Code Pro Medium:pixelsize=13:antialias=true:hinting=true, xft:Source Code Pro for
Powerline:pixelsize=13:antialias=true:hinting=true
!URxvt*boldfont: xft:Source Code Pro for Powerline:pixelsize=13:antialias=true:hinting=true


!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight


URxvt.depth:                32
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            1000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true


! Fix font space
URxvt*letterSpace: -1

! Number lines in the scrollback buffer
URxvt*saveLines:  1024

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          firefox

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #515151
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true


!-------------------------------------------------------------------------------
! Theme
!-------------------------------------------------------------------------------

!TomorrowNightEighties
#define t_background      #2d2d2d
#define t_current_line    #393939
#define t_selection      	#515151
#define t_foreground      #cccccc
#define t_comment	     	  #999999
#define t_red		     	    #f2777a
#define t_orange	     	  #f99157
#define t_yellow        	#ffcc66
#define t_green	        	#99cc99
#define t_aqua	        	#66cccc
#define t_blue	        	#6699cc
#define t_purple        	#cc99cc


*.foreground:   t_foreground
*.background:   t_background
*.cursorColor:  #aeafad

! Black / Grey
*.color0:       #000000
*.color8:       #666666

! Red / Bright Red
*.color1:       t_red
*.color9:       #FF3334

! Green + Bright Green
*.color2:       t_green
*.color10:      #9ec400

! Yellow (Orange) + Bright Yellow (Yellow)
*.color3:       t_orange
*.color11:      t_yellow

! Blue + Bright Blue
*.color4:       t_blue
*.color12:      t_blue

! Magenta (Purple) + Bright Magenta
*.color5:       t_purple
*.color13:      #b777e0

! Cyan (Aqua) + Bright Cyan
*.color6:       t_aqua
*.color14:      #54ced6

! Light Grey (Selection) + White (Current Line)
*.color7:       t_selection
*.color15:      t_current_line
